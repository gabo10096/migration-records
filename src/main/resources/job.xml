<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
 
 
	<batch:job id="importFileJob" job-repository="jobRepository">
		<batch:step id="importFileStep">
			<batch:tasklet>
				<batch:chunk 
                    reader="documentImporterReader"
					writer="documentImporterWriter"
					commit-interval="1">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>
 
	<!-- Reader, destacar que se salta la lÃ­nea de las cabeceras -->
 
	<bean id="documentImporterReader" class="org.springframework.batch.item.file.FlatFileItemReader">
		<property name="resource" value="${file}" />
		<property name="encoding" value="utf8" />
		<property name="lineMapper" ref="documentImporterMapper" />
	</bean>
 
	<!-- Mapeo de cada fila del fichero -->
 
	<bean id="documentImporterMapper"
		class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
		<property name="fieldSetMapper" ref="documentAutoFieldSetMapper" />
		<property name="lineTokenizer">
			<bean
				class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
				<property name="names"
					value="clientId" />
			</bean>
		</property>
	</bean>
 
 
	<!-- Mapeo de campos y objeto a mapear -->
 
	<bean id="documentAutoFieldSetMapper"
		class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
		<property name="prototypeBeanName" value="documentBean" />
	</bean>
 
	<bean id="documentBean" class="batchprocess.model.DigitizedDocument"
		scope="prototype" />
 
 
	<!-- Writer -->
 
	<bean id="documentImporterWriter"
		class="batchprocess.writer.DocumentImporterWriter" />
 
</beans>